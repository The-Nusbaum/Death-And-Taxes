<p id="notice"><%= notice %></p>

<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>County</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Total</th>
      <th>Taxes</th>
      <th>Profit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.county.name %></td>
        <td><%= sale.product.product_name %></td>
        <td><%= sale.quantity %></td>
        <td><%= number_to_currency sale.total %></td>
        <td><%= number_to_currency sale.taxes %></td>
        <td><%= number_to_currency sale.profit %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="3"></td>
      <td><%= number_to_currency @total_sales %></td>
      <td><%= number_to_currency @total_tax %></td>
      <td><%= number_to_currency @total_profit %></td>
    </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Sale', new_sale_path %>
